<%= form_for @task do |f| %>

  <div class="form-group">
  <% if !@project %>
    <%= f.label :project %><br />
    <%= f.collection_select :project_id, Project.all, :id, :name, class: 'form-control' %>
  <% else %>
  <%= f.hidden_field :project_id %>
  <% end %>

  </div>

  <div class="form-group">
    <%= f.label :item %><br />
    <%= f.text_field :item, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.number_field :price, step: :any, class: 'form-control' %>
  </div>

  <div class = "container text-center">
    <%= f.submit class: "btn btn-lg btn-dark btn-block" %> 
  </div>


<% end %>