<%= form_for([@task.project, @task]) do |f| %>
  <div class="form-group">
    <%= f.label :item %><br />
    <%= f.text_field :item, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label :price %><br />
    <%= f.text_field :price, class: 'form-control' %>
  </div>

  <div class = "container text-center">
    <%= f.submit class: "btn btn-lg btn-dark btn-block" %> 
  </div>
  

<% end %>